<div class="text-center edit-trip">
  <h1>Add activity to trip</h1>
</div>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-offset-3 col-md-6">
      <%= simple_form_for([@trip, @activity]) do |f| %>
      <%= f.input :trip_type %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit class: "btn btn-pic text-center"%>
      <% end %>
    </div>
  </div>
</div>
