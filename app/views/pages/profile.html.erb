<div class="container text-center">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2">
      <div class="tabs">
        <a href="#" class="tab active" data-target="shared">
          Your shared trips
        </a>
        <a href="#" class="tab" data-target="saved">
          Your saved trips
        </a>
      </div>
    </div>
  </div>
</div>

<div class="tab-content" id="shared">
  <div class="container">
    <div class="row">
      <% @user.trips.each do |trip| %>
      <div class="col-xs-12 col-sm-8 col-sm-offset-2">
        <%= render partial: 'shared/card', locals: { trip: trip, booked: true } %>
        <% end %>
      </div>
    </div>
  </div>
</div>



<div class="tab-content hidden" id="saved">

  <div class="container">
    <div class="row">
      <h3 class="text-center">
        Hello goodbye
      </h3>
      <% current_user.saved_trips.each do |saved_trip| %>
      <div class="col-xs-12 col-sm-8 col-sm-offset-2">
        <%= render partial: 'shared/card', locals: { trip: saved_trip.trip, booked: false } %>
        <% end %>
      </div>
    </div>
  </div>

</div>

<%= render partial: "shared/floating_button" %>


