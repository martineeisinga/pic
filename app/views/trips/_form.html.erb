  <div class="row">
    <div class="col-xs-12 col-md-offset-3 col-md-6">
      <%= simple_form_for(@trip) do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :location %>
        <%= f.input :price_experience %>
        <%= f.input :date %>
        <%= f.input :category_id, collection: @categories%>
        <%= f.input :photo %>
        <%= f.submit class: "btn btn-primary"%>
      <% end %>
      <br>
      <%= link_to "back to home", root_path, class: "btn btn-primary" %>
    </div>
  </div>

